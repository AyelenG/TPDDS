{{#partial "extra_estilos"}}
<link rel="stylesheet" href="/css/main.css"/>
{{/partial}}
{{#partial "contenido"}}
<div class="container">
	<div class="text-center">
		<h1>Cuentas</h1>
		<h2>{{empresa.nombre}} ({{empresa.symbol}}) - {{anio}}</h2>		
		<br>
	</div>
	
	<!-- Listado-->
	<div class="row">
		<div class="col-md-12 mx-auto">
			<table class="table table-striped table-inverse">
				<thead>
			      <tr class="cabecera">
			        <th class="nombre">Nombre</th>
			        <th class="valor">Valor (en U$D millones)</th>
			      </tr>
			    </thead>
			    <tbody>	
			     	{{#each cuentas}}
			      	<tr>
				        <td>{{nombre}}</td>
				        <td>{{valor}}</td>
			      	</tr>	
			    	{{/each}}
			    </tbody>
			</table>
		</div>
	</div>
	
	<div class="text-center">
		<a href="/empresas/{{empresa.id}}" class="btn btn-outline-dark">Otro periodo</a>
		<a href="/empresas" class="btn btn-secondary">Otra empresa</a>
	</div>
	<br>
</div>
{{/partial}}
{{>layout.hbs}}