{{#partial "estilos"}}
<link rel="stylesheet" href="/css/carga-indicador.css"/>
{{/partial}}
{{#partial "contenido"}}
<div id="carga">
	<form name="cargaForm" action="/indicador/verificacion" method="POST">
	<input class="form-control" type="text" name="nombreIndicador" placeholder="Nombre del nuevo Indicador a cargar"/>
	<br/>
	<!-- display -->
	<div class="screen"></div>
	<div class="combos">
		<!-- Cuentas e Indicadores -->
		<select class="cuentas">
			<option disabled selected>Seleccione una cuenta...</option>
		{{#each cuentas}}
			<option>{{nombre}}</option>
		{{/each}}
		</select>		
		<select class="indicadores">
			<option disabled selected>Seleccione un indicador...</option>
		{{#each indicadores}}
			<option>{{nombre}}</option>
		{{/each}}
		</select>
	</div>
	<div class="keys">
		<!-- Constantes y Operadores -->
		<span>1</span>
		<span>2</span>
		<span>3</span>
		<span>4</span>
		<span>5</span>
		<span>6</span>
		<span>7</span>
		<span>8</span>
		<span>9</span>
		<span>0</span>
		<span>.</span>
		<span class="operator">+</span>
		<span class="operator">-</span>
		<span class="operator">x</span>
		<span class="operator">รท</span>
		<span class="operator">(</span>
		<span class="operator">)</span>
		<span class="clear">Limpiar</span>
		<span class="eval">Cargar</span>
	</div>
	</form>
</div>
{{/partial}}
{{#partial "javascript"}}
<script>
    $(".cuentas").change(function() {
		var str = $("div.screen").text() + "[" + $(".cuentas option:selected").text() + "]";
		$("div.screen").text( str )});
</script>
<script>
    $(".indicadores").change(function() {
		var str = $("div.screen").text() + "<" + $(".indicadores option:selected").text() + ">";
		$("div.screen").text( str )});
</script>

<script src="/js/carga-indicador.js" type="text/javascript"></script>
{{/partial}}
{{>base.hbs}}
{{>layout.hbs}}
